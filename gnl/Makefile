# **************************************************************************** #
# 								   VARIABLES								   #
# **************************************************************************** #

NAME		= libgnl.a
CC 			= cc
CFLAGS		= -Wall -Wextra -Werror
AR			= ar rcs
RM			= rm -f

# **************************************************************************** #
# 									FILES									   #
# **************************************************************************** #

SRCS		= get_next_line.c get_next_line_utils.c
OBJS		= $(SRCS:.c=.o)

# **************************************************************************** #
# 									RULES									   #
# **************************************************************************** #

all: $(NAME)

$(NAME): $(OBJS)
	$(AR) $(NAME) $(OBJS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re